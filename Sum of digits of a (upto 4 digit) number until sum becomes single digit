#include<iostream>
using namespace std;
int main() {
	
      int x,s=0,m=s;
   cout << "Enter the number : ";
   cin >> x;
   while (x != 0) 
    {
	  
      s = s + x % 10;
      x = x / 10;
      
    }
    cout << "\nThe sum of the digits : "<< s;
     
	if (s > 9) 
    {
	    while (s != 0) 
	
	    {
       
        m += s % 10;
        s= s/10;
        
	    }
	    cout << "\nThe sum of tHe digits : "<< m;
    }
	else
	{
		cout<<"\nThere is no further summation since a single digit is obtained";
		
	}
   
  
      
   
   

}
